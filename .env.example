# ===========================================
# Createconomy Platform - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control

# -------------------------------------------
# Convex Database
# -------------------------------------------
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# -------------------------------------------
# Stripe Payment Processing
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_CLIENT_ID=ca_...

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_SECRET=
NEXT_PUBLIC_AUTH_DOMAIN=.createconomy.com

# -------------------------------------------
# Application URLs
# -------------------------------------------
NEXT_PUBLIC_MARKETPLACE_URL=https://createconomy.com
NEXT_PUBLIC_FORUM_URL=https://discuss.createconomy.com
NEXT_PUBLIC_ADMIN_URL=https://console.createconomy.com
NEXT_PUBLIC_SELLER_URL=https://seller.createconomy.com

# -------------------------------------------
# Vercel (Auto-populated in Vercel deployments)
# -------------------------------------------
# VERCEL=1
# VERCEL_ENV=production|preview|development
# VERCEL_URL=

# -------------------------------------------
# Turborepo Remote Caching
# -------------------------------------------
TURBO_TOKEN=
TURBO_TEAM=

# -------------------------------------------
# Optional: Analytics & Monitoring
# -------------------------------------------
# NEXT_PUBLIC_ANALYTICS_ID=
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# -------------------------------------------
# Optional: Email Service
# -------------------------------------------
# RESEND_API_KEY=
# EMAIL_FROM=noreply@createconomy.com

# -------------------------------------------
# Optional: File Storage
# -------------------------------------------
# UPLOADTHING_SECRET=
# UPLOADTHING_APP_ID=

# -------------------------------------------
# Development Only
# -------------------------------------------
# NODE_ENV=development

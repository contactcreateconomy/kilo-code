# ===========================================
# Forum App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Convex Database
# -------------------------------------------
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://discuss.createconomy.com
NEXT_PUBLIC_APP_NAME=Createconomy Forum
NEXT_PUBLIC_APP_DESCRIPTION=Join the Createconomy community discussion

# -------------------------------------------
# Cross-App URLs
# -------------------------------------------
NEXT_PUBLIC_MARKETPLACE_URL=https://createconomy.com
NEXT_PUBLIC_ADMIN_URL=https://console.createconomy.com
NEXT_PUBLIC_SELLER_URL=https://seller.createconomy.com

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_SECRET=
NEXT_PUBLIC_AUTH_DOMAIN=.createconomy.com

# Google OAuth (for Google One Tap sign-in)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# -------------------------------------------
# Analytics (optional)
# -------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_ANALYTICS_ID=

# -------------------------------------------
# SEO & Social
# -------------------------------------------
NEXT_PUBLIC_TWITTER_HANDLE=@createconomy
NEXT_PUBLIC_OG_IMAGE_URL=https://discuss.createconomy.com/og-image.png

# -------------------------------------------
# Forum-specific Settings
# -------------------------------------------
NEXT_PUBLIC_MAX_POST_LENGTH=50000
NEXT_PUBLIC_MAX_REPLY_LENGTH=10000
NEXT_PUBLIC_POSTS_PER_PAGE=20

# -------------------------------------------
# Moderation (optional)
# -------------------------------------------
# PERSPECTIVE_API_KEY=

# -------------------------------------------
# Vercel (auto-populated on Vercel)
# -------------------------------------------
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=

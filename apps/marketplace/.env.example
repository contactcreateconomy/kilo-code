# ===========================================
# Marketplace App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Convex Database
# -------------------------------------------
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://createconomy.com
NEXT_PUBLIC_APP_NAME=Createconomy
NEXT_PUBLIC_APP_DESCRIPTION=Discover unique digital products from independent creators

# -------------------------------------------
# Cross-App URLs
# -------------------------------------------
NEXT_PUBLIC_FORUM_URL=https://discuss.createconomy.com
NEXT_PUBLIC_ADMIN_URL=https://console.createconomy.com
NEXT_PUBLIC_SELLER_URL=https://seller.createconomy.com

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_SECRET=
NEXT_PUBLIC_AUTH_DOMAIN=.createconomy.com

# -------------------------------------------
# Stripe Payment Processing
# -------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_CONNECT_CLIENT_ID=

# -------------------------------------------
# Analytics (optional)
# -------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_ANALYTICS_ID=

# -------------------------------------------
# SEO & Social
# -------------------------------------------
NEXT_PUBLIC_TWITTER_HANDLE=@createconomy
NEXT_PUBLIC_OG_IMAGE_URL=https://createconomy.com/og-image.png

# -------------------------------------------
# File Upload (optional)
# -------------------------------------------
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

# -------------------------------------------
# Email (optional)
# -------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=noreply@createconomy.com


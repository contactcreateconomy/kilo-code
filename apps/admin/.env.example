# ===========================================
# Admin App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Convex Database
# -------------------------------------------
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=
CONVEX_DEPLOY_KEY=

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://console.createconomy.com
NEXT_PUBLIC_APP_NAME=Createconomy Admin
NEXT_PUBLIC_APP_DESCRIPTION=Admin console for Createconomy platform

# -------------------------------------------
# Cross-App URLs
# -------------------------------------------
NEXT_PUBLIC_MARKETPLACE_URL=https://createconomy.com
NEXT_PUBLIC_FORUM_URL=https://discuss.createconomy.com
NEXT_PUBLIC_SELLER_URL=https://seller.createconomy.com

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_SECRET=
NEXT_PUBLIC_AUTH_DOMAIN=.createconomy.com

# -------------------------------------------
# Admin-specific Auth
# -------------------------------------------
ADMIN_ALLOWED_EMAILS=admin@createconomy.com
ADMIN_ALLOWED_DOMAINS=

# -------------------------------------------
# Stripe (Admin Access)
# -------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# -------------------------------------------
# Analytics & Monitoring
# -------------------------------------------
NEXT_PUBLIC_ANALYTICS_ID=
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# -------------------------------------------
# Audit & Logging
# -------------------------------------------
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_AUDIT_LOGGING=true

# -------------------------------------------
# Feature Flags
# -------------------------------------------
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BULK_OPERATIONS=true

# -------------------------------------------
# Vercel (auto-populated on Vercel)
# -------------------------------------------
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=

# ===========================================
# Seller App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Convex Database
# -------------------------------------------
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=
CONVEX_DEPLOY_KEY=

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://seller.createconomy.com
NEXT_PUBLIC_APP_NAME=Createconomy Seller Portal
NEXT_PUBLIC_APP_DESCRIPTION=Manage your products and sales on Createconomy

# -------------------------------------------
# Cross-App URLs
# -------------------------------------------
NEXT_PUBLIC_MARKETPLACE_URL=https://createconomy.com
NEXT_PUBLIC_FORUM_URL=https://discuss.createconomy.com
NEXT_PUBLIC_ADMIN_URL=https://console.createconomy.com

# -------------------------------------------
# Authentication
# -------------------------------------------
AUTH_SECRET=
NEXT_PUBLIC_AUTH_DOMAIN=.createconomy.com

# Google OAuth (for Google One Tap sign-in)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# -------------------------------------------
# Stripe Connect (Seller Payments)
# -------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_CONNECT_CLIENT_ID=
STRIPE_CONNECT_WEBHOOK_SECRET=

# -------------------------------------------
# File Upload
# -------------------------------------------
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=image/*,application/pdf,application/zip

# -------------------------------------------
# Analytics
# -------------------------------------------
NEXT_PUBLIC_ANALYTICS_ID=

# -------------------------------------------
# Seller-specific Settings
# -------------------------------------------
NEXT_PUBLIC_MAX_PRODUCTS_FREE_TIER=10
NEXT_PUBLIC_MAX_PRODUCTS_PRO_TIER=100
NEXT_PUBLIC_COMMISSION_RATE=0.10

# -------------------------------------------
# Email Notifications
# -------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=sellers@createconomy.com

# -------------------------------------------
# Vercel (auto-populated on Vercel)
# -------------------------------------------
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=
